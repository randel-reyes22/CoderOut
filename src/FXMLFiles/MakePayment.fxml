<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="460.0" prefWidth="398.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MakePaymentController">
   <children>
      <VBox alignment="CENTER" layoutX="47.0" layoutY="34.0" prefHeight="393.0" prefWidth="304.0" spacing="20.0">
         <children>
            <Label text="Make Payment">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
            <TextField fx:id="tbCustomerName" alignment="CENTER" prefHeight="50.0" prefWidth="294.0" promptText="Customer name">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="tbBalance" alignment="CENTER" editable="false" prefHeight="50.0" prefWidth="294.0" promptText="Remaining Balance">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="tbAmountPay" alignment="CENTER" prefHeight="50.0" prefWidth="294.0" promptText="Enter amount ">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <DatePicker fx:id="DateGiven" prefHeight="50.0" prefWidth="294.0" promptText="Select date" />
            <Button mnemonicParsing="false" onAction="#MakePay" prefHeight="50.0" prefWidth="294.0" text="Pay">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
